﻿@model MyClass.Model.Menus

@{
    ViewBag.Title = "Thông tin chi tiết menu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">THÔNG TIN CHI TIẾT MENU</strong>
                        </div>

                        <div class="col-md-6 text-right">
                            <a class="btn-sm btn-success" href="@Url.Action("Edit","Menu", new { id = Model.Id })">
                                <i class="fa fa-plus"></i> Sửa
                            </a>
                            <a class="btn-sm btn-info" href="@Url.Action("Index","Menu")">
                                <i class="fa fa-long-arrow-alt-left"> </i>Quay lại
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")

                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.TypeMenu)</th>
                                <th> @Html.DisplayNameFor(model => model.Order)</th>
                                <th>@Html.DisplayNameFor(model => model.Position)</th>
                                <th> @Html.DisplayNameFor(model => model.Link)</th>
                                <th>@Html.DisplayNameFor(model => model.ParentID)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                                <td>@Html.DisplayFor(model => model.TypeMenu)</td>
                                <td>@Html.DisplayFor(model => model.Order)</td>
                                <td>@Html.DisplayFor(model => model.Position)</td>
                                <td>@Html.DisplayFor(model => model.Link)</td>
                                <td>@Html.DisplayFor(model => model.ParentID)</td>
                            </tr>
                        </tbody>
                    </table>

                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->
